rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /memorias/{pareamentoId}/{uid}/{tarefaId}/{fileName} {
      allow read, write: if false;
    }

    match /profile_pics/{uid}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
